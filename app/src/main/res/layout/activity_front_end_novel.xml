<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.FrontEndNovel">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/novelCoverIV"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/novelCoverImg" />

            <TextView
                android:id="@+id/novelTitleTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:text="@string/novelTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/novelAuthorTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/novelAuthor"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelTitleTV"
                app:layout_constraintTop_toBottomOf="@+id/novelTitleTV" />

            <ImageButton
                android:id="@+id/starIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCoverIV"
                app:layout_constraintStart_toStartOf="@+id/novelTitleTV"
                android:background="@drawable/star"/>

            <TextView
                android:id="@+id/starCountTV"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/starCount"
                app:layout_constraintBottom_toBottomOf="@+id/novelCoverIV"
                app:layout_constraintEnd_toStartOf="@+id/shareFBIB"
                app:layout_constraintStart_toEndOf="@+id/starIB"
                app:layout_constraintTop_toTopOf="@+id/starIB"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/shareTWIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCoverIV"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                android:src="@drawable/shareTWImg"
                android:background="@drawable/shareTWImg"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/shareFBIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCoverIV"
                app:layout_constraintEnd_toStartOf="@+id/shareTWIB"
                android:layout_marginEnd="10dp"
                android:src="@drawable/shareFBImg"
                android:background="@drawable/shareFBImg"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/novelSynopsisTV"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:text="@string/novelSynopsis"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/starIB" />


            <TextView
                android:id="@+id/novelGenreTV"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelSynopsisTV"
                android:text="@string/novelGenre"/>

            <Button
                android:id="@+id/novelChap2BTN"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:text="Chapter 2"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelGenreTV" />

            <Button
                android:id="@+id/novelChap1BTN"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:text="Chapter 1"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelChap2BTN" />

            <TextView
                android:id="@+id/commentTV"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:text="gamerBoy : THis is a Very Nice NOVEL"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelChap1BTN" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/navSearchIB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/navSearchImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/navHomeIB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/navProfileIB"
        app:layout_constraintStart_toStartOf="@+id/navSearchIB"
        android:src="@drawable/navHomeImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/navNotificationIB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navSearchIB"
        android:src="@drawable/navNotifImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/navProfileIB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/navProfileImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>
