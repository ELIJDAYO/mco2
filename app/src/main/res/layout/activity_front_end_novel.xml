<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.FrontEndNovel">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/novelCover"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/novelCoverImg" />

            <TextView
                android:id="@+id/novelTitle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:text="@string/novelTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/novelAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/novelTitle"
                android:layout_marginTop="10dp"
                android:text="@string/novelAuthor"
                app:layout_constraintEnd_toEndOf="@+id/novelTitle"
                app:layout_constraintStart_toStartOf="@+id/novelTitle"
                app:layout_constraintTop_toBottomOf="@+id/novelTitle" />

            <ImageButton
                android:id="@+id/star"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCover"
                app:layout_constraintStart_toStartOf="@+id/novelTitle"
                android:background="@drawable/star"/>

            <TextView
                android:id="@+id/starCount"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/starCount"
                app:layout_constraintBottom_toBottomOf="@+id/novelCover"
                app:layout_constraintEnd_toStartOf="@+id/shareFB"
                app:layout_constraintStart_toEndOf="@+id/star"
                app:layout_constraintTop_toTopOf="@+id/star"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/shareTW"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCover"
                app:layout_constraintEnd_toEndOf="@+id/novelTitle"
                android:src="@drawable/shareTWImg"
                android:background="@drawable/shareTWImg"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:id="@+id/shareFB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCover"
                app:layout_constraintEnd_toStartOf="@+id/shareTW"
                android:layout_marginEnd="10dp"
                android:src="@drawable/shareFBImg"
                android:background="@drawable/shareFBImg"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/synopsis"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:text="@string/novelSynopsis"
                app:layout_constraintEnd_toEndOf="@+id/novelTitle"
                app:layout_constraintStart_toStartOf="@+id/novelCover"
                app:layout_constraintTop_toBottomOf="@+id/star" />


            <TextView
                android:id="@+id/genre"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@+id/novelTitle"
                app:layout_constraintStart_toStartOf="@+id/novelCover"
                app:layout_constraintTop_toBottomOf="@+id/synopsis" />

            <Button
                android:id="@+id/chapter2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:text="Chapter 2"
                app:layout_constraintEnd_toEndOf="@+id/novelTitle"
                app:layout_constraintStart_toStartOf="@+id/novelCover"
                app:layout_constraintTop_toBottomOf="@+id/genre" />

            <Button
                android:id="@+id/chapter1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:text="Chapter 1"
                app:layout_constraintEnd_toEndOf="@+id/novelTitle"
                app:layout_constraintStart_toStartOf="@+id/novelCover"
                app:layout_constraintTop_toBottomOf="@+id/chapter2" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:text="gamerBoy : THis is a Very Nice NOVEL"
                app:layout_constraintEnd_toEndOf="@+id/novelTitle"
                app:layout_constraintStart_toStartOf="@+id/novelCover"
                app:layout_constraintTop_toBottomOf="@+id/chapter1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/navSearchIB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/navSearchImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/navHomeIB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/navProfileIB"
        app:layout_constraintStart_toStartOf="@+id/navSearchIB"
        android:src="@drawable/navHomeImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/navNotificationIB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navSearchIB"
        android:src="@drawable/navNotifImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <ImageButton
        android:id="@+id/navProfileIB"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/navProfileImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>
