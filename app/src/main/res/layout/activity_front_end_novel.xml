<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="activities.FrontEndNovelActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lawn_green"
        android:fitsSystemWindows="true"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/novelpage_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_scrollFlags="scroll|enterAlways"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"

                >

                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/lawn_green"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/previous_arrow_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:maxLines="1"
                    android:text="Novel Page"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/iv_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/lawn_green"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"

                    android:scaleType="fitCenter"
                    android:src="@drawable/x" />
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/novelTitleBGTV"
                android:layout_width="0dp"
                android:layout_height="00dp"
                app:layout_constraintBottom_toBottomOf="@+id/starIB"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelTitleTV"
                app:layout_constraintTop_toTopOf="@+id/novelTitleTV"
                android:background="@color/colorTextBackground"/>

            <ImageView
                android:id="@+id/novelCoverIV"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/novel_cover_img"
                />

            <TextView
                android:id="@+id/novelTitleTV"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:text="@string/novelTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/novelAuthorTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/novelAuthor"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelTitleTV"
                app:layout_constraintTop_toBottomOf="@+id/novelTitleTV"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/starIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCoverIV"
                app:layout_constraintStart_toStartOf="@+id/novelTitleTV"
                android:background="@drawable/star"/>

            <TextView
                android:id="@+id/starCountTV"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/starCount"
                app:layout_constraintBottom_toBottomOf="@+id/novelCoverIV"
                app:layout_constraintEnd_toStartOf="@+id/shareFBIB"
                app:layout_constraintStart_toEndOf="@+id/starIB"
                app:layout_constraintTop_toTopOf="@+id/starIB"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/shareTWIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCoverIV"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                android:src="@drawable/share_twi_img"
                android:background="@drawable/share_twi_img"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/shareFBIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/novelCoverIV"
                app:layout_constraintEnd_toStartOf="@+id/shareTWIB"
                android:layout_marginEnd="10dp"
                android:src="@drawable/share_fb_img"
                android:background="@drawable/share_fb_img"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/novelSynopsisTV"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:text="@string/novelSynopsis"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/starIB"
                android:padding="10dp"
                android:background="@color/colorTextBackground"/>


            <TextView
                android:id="@+id/novelGenreTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelSynopsisTV"
                android:text="@string/novelGenre"
                android:padding="10dp"
                android:background="@color/colorTextBackground"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/novelChapBTN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelGenreTV"
                android:nestedScrollingEnabled="false" />

            <!--<Button
                android:id="@+id/novelChap2BTN"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:text="Chapter 2"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelGenreTV" />-->

            <!--<Button
                android:id="@+id/novelChap1BTN"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:text="Chapter 1"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelChap2BTN" />-->

            <TextView
                android:id="@+id/commentTV"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@color/colorTextBackground"
                android:padding="10dp"
                android:text="gamerBoy : THis is a Very Nice NOVEL"
                app:layout_constraintEnd_toEndOf="@+id/novelTitleTV"
                app:layout_constraintStart_toStartOf="@+id/novelCoverIV"
                app:layout_constraintTop_toBottomOf="@+id/novelChapBTN"
                android:layout_marginTop="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
